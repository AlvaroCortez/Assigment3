<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_picture_downloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/picture_downloader"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_picture_downloader"
        android:layout_below="@+id/text_picture_downloader"
        android:layout_marginTop="38dp"
        android:text="@string/status_downloader" />

    <Button
        android:id="@+id/picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/status_text"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/text_picture_downloader"
        android:layout_marginBottom="30dp"
        android:onClick="onClick"
        android:text="@string/button_downloader" />

    <ProgressBar
        android:id="@+id/progress_downloader"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/status_text"
        android:layout_alignRight="@+id/text_picture_downloader"
        android:layout_below="@+id/status_text"
        android:layout_marginTop="19dp" />

</RelativeLayout>
